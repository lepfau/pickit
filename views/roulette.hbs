<section id="roulette-div">
    <div>
        <p id="roulettte-item-user-name">Like it for {{item.user.name}}? </p>
        <img id="roulettte-item-user-image" src="{{item.user.image}}" alt=""> image
    </div>

    <hr>

    <div class="roulette-items">
        <div>
            <p id="roulette-brand">{{brand}}</p>
            <p id="roulette-price">{{price}}</p>
        </div>
        <p id="roulette-name">{{name}}</p>

        <img id="roulette-image" src="{{image}}" alt="">

        <div class="roulette-btns">
            <i id="dislike-btn" class="fas fa-thumbs-down"></i>

            <i id="like-btn" class="fas fa-heart"></i>
        </div>
    </div>
    <div class="link">
        <a id="roulette-link" href="{{link}}">See more details</a>
    </div>
    </div>
</section>